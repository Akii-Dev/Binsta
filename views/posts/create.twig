{% extends "./layouts/app.twig" %}


{% block body %}
	
	<form action="" method="POST">

		<div
			class="w-11/12 mx-auto outline outline-offset-0 outline-gray-200 outline-1 mb-6 rounded-lg mt-8">
			{% if data %}
		<p class="text-red-500">{{ data }}</p>
	{% endif %}

			{# top #}
			<div class="flex flex-col md:flex-row  px-2">
				<div class="w-full my-4">
					<h1 class=" text-2xl mb-2 ml-2">Create post</h1>
					<textarea name="textarea" id="textarea" class="outline-gray-200 outline outline-offset-0 outline-1 text-sm overflow-hidden resize-none h-80 w-full" required></textarea>

				</div>

			</div>
			{# bottom #}
			<div class=" ">
				<div class="flex flex-col sm:flex-row">
					<div class="sm:w-1/4 w-1/2">
						<h1 class="text-xl ml-4">Paste settings</h1>
						<div class=" whitespace-nowrap flex flex-col w-auto mt-1 mx-2 pt-2 px-1 h-40 outline-gray-200 outline outline-offset-0 outline-1">
							<div class="flex my-2 justify-between">
								<label class="" for="language">Language:</label>
								<select class="w-28 rounded-md mx-4 p-1" name="language" id="language">
									<option value="none">None</option>
									<option value="html">HTML</option>
									<option value="css">CSS</option>
									<option value="php">PHP</option>
									<option value="sql">SQL</option>
									<option value="javascript">JavaScript</option>
								</select>

							</div>
							<div class="flex my-2 justify-between">
								<label class="" for="visibility">Post visibility:</label>
								<select class="w-28 rounded-md mx-4 p-1" name="visibility" id="visibility">
									<option value="public">Public</option>
									<option value="private">Private</option>
								</select>

							</div>
						</div>

					</div>
					<div class="w-8/12 ml-4">
						<h1 class="text-xl mb-1">Description</h1>
						<textarea name="description" id="description" maxlength="250" placeholder="Max 250 characters" class="text-xl outline-gray-200 outline outline-offset-0 outline-1 overflow-hidden resize-none h-40 w-full p-2"></textarea>
						<p id="description-chars" class="text-right">0/250</p>

					</div>
					<div></div>
					<div class="mx-4 w-2/12 flex items-end justify-center">
						<button type="submit" class=" w-28 h-12 mb-2 text-xl whitespace-nowrap flex justify-center items-center rounded-md bg-purple-600 px-3 py-2 font-semibold text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600">Create post</button>
					</div>
				</div>

			</div>


		</div>
	</form>

	<script src="../js/create.js" defer></script>

{% endblock %}
